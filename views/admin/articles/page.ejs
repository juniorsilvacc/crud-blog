                        <a href="/<%= article.slug %>" class="btn btn-dark">Ler artigo</a>
                </div> 
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
               
                <% if(result.page > 2) { %>
                    <a href="/articles/page/<%= result.page - 1 %>" style="float: left; margin-bottom: 25px; color: black; font-weight: bold;"><< Anterior</a>
                <% } else if(result.page == 2) { %>
                    <a href="/" style="float: left; margin-bottom: 25px; color: black; font-weight: bold;"><< Anterior</a>
                <% } %>

                <% if(result.next) { %>
                    <a href="/articles/page/<%= result.page + 1 %>" style="float: right; margin-bottom: 25px; color: black; font-weight: bold;">PrÃ³xima >></a>
