    <div class="container create">
        <div class="card col-md-6 m-auto">
            <div class="card-header">
                <h3>Login admin</h3>
            </div>
            <div class="card-body">
                <form action="/authenticate" method="POST">
                    <label for="email">E-mail:</label>
                    <input class="form-control mb-3" type="email" name="email" placeholder="email@exemplo.com">
                    <label for="password">Senha:</label>
                    <input class="form-control mb-3" type="password" name="password" placeholder="******">
                    <button type="submit" class="btn btn-dark btn-block">Logar</button>
                </form>
            </div>
        </div>
    </div>
    
    
