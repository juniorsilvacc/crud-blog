<%- include("partials/header.ejs"); %>
<%- include("partials/homenavbar.ejs"); %>
<body>

    <div class="container">
        <br>
        <div class="jumbotron">
            <h1 class="display-4">Bem-vindo</h1>
            <p class="lead">Este é um simples blog com painel administrativo.</p>
            <hr class="my-4">
            <p>Descrição detalhada aqui!</p>
            <p class="lead">
              <a class="btn btn-warning btn-lg" href="#" role="button">Ler mais</a>
            </p>
        </div>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-dark">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float: right; margin-bottom: 25px; color: black; font-weight: bold;">Próxima >></a>
            </div>
        </div>

    </div>

    <%- include("partials/footer.ejs"); %>
</body>